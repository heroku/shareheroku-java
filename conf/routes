# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /submit                                 Application.submit

POST    /submitApp                              Application.submitApp

POST    /shareApp                               Application.shareApp

GET     /search/{query}                         Application.search

GET     /search                                 Application.search

GET     /tag                                    Application.tag
GET     /tag/                                   Application.tag
GET     /tag/{tagIds}                           Application.tag


GET     /tags                                   Application.tags

GET     /app/{appId}                            Application.app


# Import CRUD routes
*      /admin                                   module:crud
*      /                                        module:secure


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
#{if play.Play.mode.isDev()}
    GET     /public/                        staticDir:public
#{/}
#{else}
    GET     d2iu8jbjgczc8x.cloudfront.net/public  staticDir:public
    GET     /public/                              staticDir:public
#{/}

####GET     /public/                                staticDir:public

# Catch all
#*       /{controller}/{action}                  {controller}.{action}
